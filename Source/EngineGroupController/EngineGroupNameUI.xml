<?xml version="1.0" encoding="utf-8" ?>
<Window
  xmlns:std="http://www.asmitech.com/UnityGUIFramework/StandardControls"
  Width="200" Height="70" Left="300" Top="50" TextColor="White">
  <std:Layout Direction="Vertical">
    <std:Layout Direction="Horizontal">
      <std:Label Text="Group ID:" Width="60" />
      <std:TextBox ControlId ="tbName" Width="100" MaxLength="10" />
    </std:Layout>
    <std:Layout Direction="Horizontal">
      <std:Spacer />
      <std:Button ControlId="btnAccept" Text="OK" />
      <std:Spacer />
      <std:Button ControlId="btnCancel" Text="Cancel" />
      <std:Spacer />
    </std:Layout>
  </std:Layout>
</Window>